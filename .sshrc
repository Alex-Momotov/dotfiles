# Command line prompt
orange=$(tput setaf 166);
white=$(tput setaf 15);
violet=$(tput setaf 92);
red=$(tput setaf 1);
bold=$(tput bold);
reset=$(tput sgr0);

parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/*//'
}
