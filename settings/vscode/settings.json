{    
    "update.mode": "none",                          // prevent VSCode auto update (keep version where terminal splitting works)
	"workbench.editor.closeOnFileDelete": true,
    "files.autoSave": "afterDelay",
    "editor.minimap.enabled": false,
    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "always",
    "terminal.external.osxExec": "iTerm.app",
    "workbench.statusBar.visible": false,
    "workbench.editor.tabCloseButton": "left",
	"workbench.colorCustomizations": {
        "terminal.selectionBackground": "#fbff008a",        // terminal highlight and search
        "editor.selectionBackground": "#1B5986",            // selection - background
        "editor.selectionHighlightBorder": "#61936F",       // strings matching selection - border
        "editor.findMatchBackground": "#214283",            // current search match - background
        "editor.findMatchHighlightBackground": "#32593D",   // background of other search matches
        "editor.findMatchHighlightBorder": "#61936F",       // border of other search matches
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "editor.insertSpaces": false,

    // "editor.wordWrapColumn": 140,
    // "git.enabled": true,
    // "editor.quickSuggestions": {
    //     "comments": "off",
    //     "strings": "off",
    //     "other": "off"
    // },
    // "editor.tabCompletion": "onlySnippets",

    "workbench.editor.untitled.labelFormat": "name",
    "workbench.editor.enablePreview": false,
    "workbench.activityBar.visible": false,
    "material-icon-theme.folders.theme": "none",
    "material-icon-theme.hidesExplorerArrows": false,
    "material-icon-theme.activeIconPack": "angular",
    "explorer.confirmDelete": false,
    // "terminal.integrated.cwd": "/Users/alexmomotov/",
    "editor.fontSize": 13,
    "explorer.confirmDragAndDrop": false,

    "files.associations": {
        "*enkinsfile*": "groovy",
        "*.txt": "properties"
    }, // Auto-reveal file in file tree
    "editor.suggestSelection": "first",
    
    "editor.copyWithSyntaxHighlighting": false,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "terminal.integrated.shell.osx": "/bin/bash",
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorTheme": "Darcula",
    "workbench.iconTheme": "material-icon-theme",
    "python.terminal.activateEnvironment": false,
    "explorer.autoReveal": false
}